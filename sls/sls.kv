# RoundedButton from https://stackoverflow.com/questions/19005182/rounding-button-corners-in-kivy
<RoundedButton@Button>:
    # background_color: 0,0,0,0  # the last zero is the critical on, make invisible
    canvas.before:
        Color:
            rgba: (.4,.4,.4,1) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(5),]

<SLSView>:
    orientation: 'vertical'
    padding: dp(10)
    spacing: dp(10)

<SLSImage>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        BorderImage:
            source: '../Images/shadow32.png'
            border: (dp(36),dp(36),dp(36),dp(36))
            size: (self.width+dp(72), self.height+dp(72))
            pos: (self.x-dp(36), self.y-dp(36))

<SLSFolder>:
    size_hint_x: 0.3
    canvas.before:
        Color:
            rgba: 1,1,1,1
        BorderImage:
            # https://openclipart.org/detail/276955/blank-blue-folder-without-solid-lines
            source: '../Images/folder.png'
            border: (dp(36),dp(36),dp(36),dp(36))
            size: (self.width+dp(72), self.height+dp(72))
            # Position the BorderImage slightly higher for better visual effect.
            pos: (self.x-dp(36), self.y-dp(20))

<SLSSection>:
    orientation: 'vertical'
    Label:
        canvas.before:
            Color:
                rgba: 0,0,0,0.03
            Rectangle:
                size: self.size
                pos: self.pos
        text: self.parent.path
        size_hint_y: None
        height: self.font_size + dp(10)
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        padding: dp(10), dp(5)
        color: 0,0,0,1
    GridLayout:
        id: grid
        cols: 3
        padding: dp(50)
        spacing: dp(50)
        pos: self.pos
        size: self.size

<MenuBar@BoxLayout>:
    orientation: 'horizontal'
    size_hint_y: None
    height: dp(50)
    padding: dp(10)
    spacing: dp(10)
    RoundedButton:
        text: 'Open'
        size_hint_x: 0.1
    Label:
        text: 'SLS'
        bold: True
        size_hint_x: 0.8
        color: 0,0,0,1
    RoundedButton:
        text: 'Quit'
        size_hint_x: 0.1
        on_release: app.stop()

<RootWidget>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            size: self.size
    MenuBar:
    SLSView:
